<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                             https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.AdminDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminDashboardServlet</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CarServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/admin/manage_cars</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CarServlet</servlet-name>
        <url-pattern>/admin/edit_car</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.DriverServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverServlet</servlet-name>
        <url-pattern>/admin/manage_drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/admin/manage_customers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DriverAssignmentServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.DriverAssignmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DriverAssignmentServlet</servlet-name>
        <url-pattern>/admin/driver_assignment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LocationServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.LocationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LocationServlet</servlet-name>
        <url-pattern>/admin/manage_locations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PricingServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.PricingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PricingServlet</servlet-name>
        <url-pattern>/admin/manage_pricing</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.CustomerDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerDashboardServlet</servlet-name>
        <url-pattern>/customer/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.BookingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookingServlet</servlet-name>
        <url-pattern>/booking</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.SignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>


    <listener>
        <listener-class>com.megacitycab.megacitycab.listeners.AppStartupListener</listener-class>
    </listener>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.megacitycab.megacitycab.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error_booking.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>







